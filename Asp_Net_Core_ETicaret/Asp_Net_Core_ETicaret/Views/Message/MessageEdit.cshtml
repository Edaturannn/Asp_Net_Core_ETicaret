@model EntityLayer.Concrete.MessageTable
@{
    ViewData["Title"] = "Message Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2"><b>@ViewData["Title"]</b></h1>
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        @using (Html.BeginForm("MessageEdit", "Message", FormMethod.Post))
        {
            <br />
            <b>User Admin Name</b>
            @Html.TextBoxFor(x=>x.UserAdminName,new{@class="form-control"})
            @Html.ValidationMessageFor(x=>x.UserAdminName,"", new{@class="text-danger"})
            <br />

            <b>E-Mail</b>
            @Html.TextBoxFor(x=>x.Email,new{@class="form-control"})
            @Html.ValidationMessageFor(x=>x.Email,"", new{@class="text-danger"})
            <br />

            <b>Create Date</b>
            @Html.TextBoxFor(x=>x.CreateDate,new{@class="form-control"})
            <br />


            <b>Message</b>
            @Html.TextAreaFor(x=>x.MessageText,new{@class="form-control",@rows="4"})
            @Html.ValidationMessageFor(x=>x.MessageText,"", new{@class="text-danger"})
            <br />



            @Html.HiddenFor(x=>x.MessageID,new{@class="form-control"})
            //Guid ID Güncellenmeyecek


            <div class="form-grop mb-3 d-grid">
                <button class="btn btn-warning text-white d-block"><i class="fas fa-pencil-alt"></i>  <b>@ViewData["Title"]</b></button>
                <a href="/Admin/Admin" class="btn btn-danger text-white"> <i class="fas fa-sign-out-alt"></i>  <b>Cancel</b></a>
            </div>
        }
    </div>
</div>




