@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.OrderTable>
@{
    ViewData["Title"] = "Order All List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2"><b>@ViewData["Title"]</b></h1>
    </div>
</div>
<br />
<div class="container">
    <div class="card-body p-0">
        <a href="/AdminOperations/OrderExcel/OrderExcelCreate" class="btn btn-secondary text-white"><i class="fas fa-save"></i>  <b>Create Excel</b></a>
        <br />
        <table class="table table-striped projects">
            <br />
            <thead class="bg-dark">
                <tr>
                    <th style="width: 20%">
                        Images
                    </th>
                    <th style="width: 20%">
                        ID
                    </th>
                    <th style="width: 20%">
                        Name
                    </th>
                    <th style="width: 15%">
                        Address
                    </th>

                    <th style="width: 40%">
                        Create Date
                    </th>

                    <th style="width: 40%">
                        
                    </th>
                    <th style="width: 40%">
                        
                    </th>
                 

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="~/ProductImg/@item.Product.ProductImages" style="height:90px; width:70px;" class="img-thumbnail-center rounded" /></td>

                        <td><b>@item.ID</b></td>


                        <td>@item.Product.ProductName</td>


                        <td>@item.Address</td>


                        <td>@(((DateTime)item.OrderCreateDate).ToString("dd-MMM-yyyy"))</td>



                        <td class="project-actions text-right">
                            <a class="btn btn-danger text-white" href="/AdminOperations/Order/OrderAllDelete/@item.OrderID">
                                <i class="fas fa-trash">
                                </i>
                                <b>Delete</b>
                            </a>
                        </td>
                        <td>
                            <a href="/AdminOperations/Order/List/@item.OrderID" class="btn btn-info text-white">
                                <i class="fa fa-truck" aria-hidden="true">
                                </i>
                                <b>Give Cargo</b>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
        @Html.PagedListPager((IPagedList)Model,page=>Url.Action("OrderAllList",new{page}),new X.PagedList.Web.Common.PagedListRenderOptions
        {
        LiElementClasses=new List<string>
        {"page-link"}
        })
        <br />
    </div>

    <!-- /.card-body -->
</div>








