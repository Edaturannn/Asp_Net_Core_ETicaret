@model IEnumerable<EntityLayer.Concrete.OrderTable>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2"><b>@ViewData["Title"]</b></h1>
    </div>
</div>
<br />
<div class="container">
    <br />
    <div class="row">
        <br />  
        <table class="table table-hover">
            <tr class="bg-dark">
                <th>ID</th>
                <th>Address</th>
                <th>Order Create Date</th>
            </tr>

            @foreach (var item in Model)
            {
                <a href="/AdminOperations/Cargo/CargoAdd/@item.OrderID" class="btn btn-info text-white"> <i class="fa fa-truck" aria-hidden="true"></i>  <b>Give Cargo</b></a>               
                <tr>
                    <td><b>@item.ID</b></td>
                    <td>@item.Address</td>
                    <td>@item.OrderCreateDate</td>
                </tr>
            }
        </table>
    </div>
</div>



