@{
    ViewData["Title"] = "User Admin Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2"><b>@ViewData["Title"]</b></h1>
    </div>
</div>


<div class="row">
    <div class="col-4 offset-4">
        <form method="post">
            <br />
            <b>Name Surname</b>
            <input class="form-control" type="text" name="NameSurname" placeholder="johndoe" />
            <span asp-validation-for="NameSurname" class="text-danger small"></span>
            <br />


            <b>Password</b>
            <input class="form-control" type="password" name="Password" placeholder="P@ssW0rd!" />
            <span asp-validation-for="Password" class="text-danger small"></span>
            <br />


            <b>RePassword</b>
            <input class="form-control" type="password" name="RePassword" placeholder="P@ssW0rd!" />
            <span asp-validation-for="RePassword" class="text-danger small"></span>
            <br />


            <div class="form-grop mb-3 d-grid">
                <button class="btn btn-info text-white d-block"><i class="fas fa-plus"></i>  <b>@ViewData["Title"]</b></button>
                <a href="/AdminOperations/Category/CategoryList" class="btn btn-danger text-white"><i class="fas fa-sign-out-alt"></i>  <b>Cancel</b></a>
            </div>
        </form>
    </div>
</div>
