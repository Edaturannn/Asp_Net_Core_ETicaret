@model EntityLayer.Concrete.BestSellersTable
@{
    ViewData["Title"] = "Best Sellers Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2"><b>@ViewData["Title"]</b></h1>
    </div>
</div>
<div class="row">
    <div class="col-4 offset-4">
        @using (Html.BeginForm("BestSellersEdit", "BestSellers", FormMethod.Post))
        {
            @Html.HiddenFor(x=>x.BestSellersID,new{@class="form-control"})
            //Guid ID Güncellenmeyecek
            <br />

            <b>Name</b>
            @Html.TextBoxFor(x=>x.BestSellersName,new{@class="form-control"})
            <br />


            <b>Title</b>
            @Html.TextBoxFor(x=>x.BestSellersTitle,new{@class="form-control"})
            <br />


            <b>Description</b>
            @Html.TextBoxFor(x=>x.BestSellersDescription,new{@class="form-control"})
            <br />


            <b>Images</b>
            @Html.TextBoxFor(x=>x.BestSellersImages,new{@class="form-control"})
            <br />


            <b>Price</b>
            @Html.TextBoxFor(x=>x.BestSellersPrice,new{@class="form-control"})
            <br />

            <b>Create Date</b>
            @Html.TextBoxFor(x=>x.BestSellersCreateDate,new{@class="form-control"})
            <br />
            

            <div class="form-grop mb-3 d-grid">
                <button class="btn btn-info text-white d-block"><i class="fas fa-pencil-alt"></i>  <b>@ViewData["Title"]</b></button>
                <a href="/AdminOperations/BestSellers/BestSellersList" class="btn btn-danger text-white"><i class="fas fa-sign-out-alt"></i>  <b>Cancel</b></a>
            </div>
        }
    </div>
</div>










